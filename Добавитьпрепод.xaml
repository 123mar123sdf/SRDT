<Page x:Class="Расписание_занятий.Добавитьпрепод"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Расписание_занятий"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавитьпрепод" Height="532" Width="1372">

    <Grid>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="512" VerticalAlignment="Top" Width="921" Margin="245,10,0,0"/>

        <Button  Style="{DynamicResource DefaultButtonStyle}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="964,326,0,0" Click="Button_Click"  Height="70" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="Иконки/Сохранить.png" Height="32" Width="32"/>
            <Button.ToolTip>
                <ToolTip>
                    Сохранить
                </ToolTip>
            </Button.ToolTip>
        </Button>

        <Label x:Name="label" Content="ФИО:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="418,110,0,0" FontSize="12" FontFamily="Segoe UI"   Width="240"/>
        <Label x:Name="label_Copy2" Content="Образование:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="418,170,0,0" FontSize="12" FontFamily="Segoe UI"   Width="162"/>
        <Label x:Name="label_Copy3" Content="Должность:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="418,236,0,0" FontSize="12" FontFamily="Segoe UI"   Width="165"/>
        <Label x:Name="label_Copy5" Content="Общий стаж работы:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="418,296,0,0" FontSize="12" FontFamily="Segoe UI"   Width="185"/>
        <TextBox x:Name="text_Copy" Text="{Binding ФИО}"  HorizontalAlignment="Left" Height="33" Margin="618,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="331" FontFamily="Segoe UI"   FontSize="12"/>
        <TextBox x:Name="text_Copy1" Text="{Binding Общий_стаж_работы}"  HorizontalAlignment="Left" Height="37" Margin="618,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="331" FontFamily="Segoe UI"   FontSize="12"/>
        <TextBox x:Name="text_Copy2" Text="{Binding Образование}"  HorizontalAlignment="Left" Height="40" Margin="618,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="331" FontFamily="Segoe UI"   FontSize="12"/>
        <TextBox x:Name="text_Copy4" Text="{Binding Должность}"  HorizontalAlignment="Left" Height="38" Margin="618,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="331" FontFamily="Segoe UI"   FontSize="12"/>
        <Label x:Name="label_Copy" Content="Стаж работы по специальности:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="418,356,0,0" FontSize="12" FontFamily="Segoe UI"   Width="240" RenderTransformOrigin="0.406,0.462"/>
        <TextBox x:Name="text_Copy3" Text="{Binding Стаж_работы_по_специальности}"  HorizontalAlignment="Left" Height="35" Margin="618,356,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="331" FontFamily="Segoe UI"   FontSize="12"/>

    </Grid>
</Page>
