<Page x:Class="Расписание_занятий.Добавитьпредметтт"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Расписание_занятий"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавитьпредметтт" Height="532" Width="1372">

    <Grid>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="502" Margin="240,10,0,0" VerticalAlignment="Top" Width="956" Background="White"/>

        <Button  Style="{DynamicResource DefaultButtonStyle}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="86" Margin="904,265,0,0" Click="Button_Click"  Height="70" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="Иконки/Сохранить.png" Height="32" Width="32"/>
            <Button.ToolTip>
                <ToolTip>
                    Сохранить
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <Label x:Name="label_Copy5" Content="Название:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="471,283,0,0" FontSize="12" FontFamily="Segoe UI" Width="180"/>
        <TextBox x:Name="text_Copy1" Text="{Binding Название_объединения}"  HorizontalAlignment="Left" Height="26" Margin="583,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="316" FontFamily="Segoe UI" FontSize="12"/>

        <ComboBox x:Name="ComboBox2" DisplayMemberPath="ФИО"   HorizontalAlignment="Left" Height="26"  SelectedItem="{Binding Педагоги}" VerticalAlignment="Top" Width="312" Margin="583,221,0,0"  FontFamily="Segoe UI" FontSize="12"/>
        <Label x:Name="label_Copy1" Content="Педагог:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="471,221,0,0" FontSize="12" FontFamily="Segoe UI" Width="218"/>

    </Grid>
</Page>
