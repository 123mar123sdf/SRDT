<Page x:Class="Расписание_занятий.ДобавлениеКабинета"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Расписание_занятий"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ДобавлениеКабинета" Height="532" Width="1372">

    <Grid>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="502" Margin="215,10,0,0" VerticalAlignment="Top" Width="956" Background="White"/>

        <Button  Style="{DynamicResource DefaultButtonStyle}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="61" Margin="892,273,0,0" Click="Button_Click"  Height="61" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="Иконки/Сохранить.png" Height="32" Width="32"/>
            <Button.ToolTip>
                <ToolTip>
                    Сохранить
                </ToolTip>
            </Button.ToolTip>
        </Button>

        <Label x:Name="label" Content="Название:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="473,216,0,0" FontSize="12" FontFamily="Segoe UI" Width="240"/>
        <Label x:Name="label_Copy" Content="Этаж:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="473,258,0,0" FontSize="12" FontFamily="Segoe UI" Width="268" RenderTransformOrigin="0.587,0.491"/>
        <Label x:Name="label_Copy5" Content="Вместимость:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="473,300,0,0" FontSize="12" FontFamily="Segoe UI" Width="180"/>
        <TextBox x:Name="text" Text="{Binding Этаж}"  HorizontalAlignment="Left" Height="26" Margin="571,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="316" FontFamily="Segoe UI" FontSize="12"/>
        <TextBox x:Name="text_Copy" Text="{Binding Наименование_кабинета}"  HorizontalAlignment="Left" Height="26" Margin="571,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="316" FontFamily="Segoe UI" FontSize="12"/>
        <TextBox x:Name="text_Copy1" Text="{Binding Вместимость}"  HorizontalAlignment="Left" Height="26" Margin="571,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="316" FontFamily="Segoe UI" FontSize="12"/>

    </Grid>
</Page>
